html
  head
    title MongoDB Contributor Hub
    link(rel='stylesheet', href='/libs/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body

    .container
      .row
        .span12.header
          img(src="/images/logo-white.png")
      .row
        .span3
          .nav.nav-list
            ul.nav.nav-list
              li.nav-header Languages
              each lang in langs
                li
                  a(href="/language/#{lang.language}")
                    = lang.language + ' '
                    span (#{lang.count})
        .span9
          table.table.table-striped
            thead
              tr
                td Project Name
                td Owner
                td Followers
                td Forks
            each project in projects
              tr
                td 
                  a(href="http://github.com/#{project.owner}/#{project.name}", target="_blank") #{project.name}
                td(owner='#{project.owner}') #{project.owner}
                td #{project.followers}
                td #{project.forks}

        ul.pager
          li
            a(href="#") Previous
          li
            a(href="#") Next

      .row
        .span12.footer Copyright &copy; #{(new Date()).getFullYear()} 10gen, Inc. Licensed under Creative Commons. MongoDB&reg;, Mongo&reg;, and the leaf logo are registered trademarks of 10gen, Inc.

